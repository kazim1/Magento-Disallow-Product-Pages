<?xml version="1.0" ?>
<config>
    <tabs>
        <restrict translate="label" module="restrict">
            <label>Poly Restrict Config</label>
            <sort_order>800</sort_order>
        </restrict>
    </tabs>
    <sections>
        <restrict translate="label" module="restrict">
            <class>separator-top</class>
            <label>Configuration</label>
            <tab>restrict</tab>
            <frontend_type>text</frontend_type>
            <sort_order>300</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>5</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <hide_price translate="label comment">
                            <label>Hide Price</label>
                            <comment>Hide Price from listing page for not loggedin users</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>10</sort_order>
                        </hide_price>
                        <hide_listing translate="label comment">
                            <label>Hide Product Listing</label>
                            <comment>Hide product listing page for not loggedin users</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>20</sort_order>
                        </hide_listing>
                        <hide_view translate="label comment">
                            <label>Hide Product View</label>
                            <comment>Hide product view page for not loggedin users</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>30</sort_order>
                        </hide_view>
                        <hideprice_message translate="label comment">
                            <label>Hide Price Message</label>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>40</sort_order>
                        </hideprice_message>
                    </fields>
                </general>
            </groups>
        </restrict>
    </sections>
</config>